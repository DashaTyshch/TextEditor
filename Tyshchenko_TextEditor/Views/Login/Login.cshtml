@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    bool? isSignUp = (bool?)TempData["IsSignUp"];
}

@model Tyshchenko_TextEditor.Models.LoginModel

<div>
    <header>
        <nav class="navbar fixed-top navbar-expand-lg">
            <div class="top-header">Let's edit some documents!</div>
        </nav>
    </header>

    <div class="container">
        <div class="panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6 text-center">
                        <section class="card-container">
                            <div id="card">
                                <figure class="front">
                                    @Html.Partial("_SignInView", Model.SignIn)
                                </figure>

                                <figure class="back"
                                        style="display: none;">
                                    @Html.Partial("_SignUpView", Model.SignUp)
                                </figure>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/js/login.js"></script>